        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Place)

                @Html.DisplayNameFor(model => model.Measurement)

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Place)
                    @Html.DisplayFor(modelItem => item.Measurement)
                </td>
