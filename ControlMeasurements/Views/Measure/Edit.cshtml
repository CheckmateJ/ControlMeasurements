@model ControlMeasurements.Models.Measurement

@{
    ViewData["Title"] = "Edit";

}
<br />
<h4>Edit</h4>
<br />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        @Html.DropDownList("PlaceType",
              new SelectList(Enum.GetValues(typeof(PlaceType))),
         new { @class = "form-control"})
        <br />
        @Html.DropDownList("MeasurementType",
                      new SelectList(Enum.GetValues(typeof(MeasurementType))),
                       new { @class = "form-control"})
        <br />
        <label asp-for="Value" class="control-label">Measurement</label>
        <input asp-for="Value" class="form-control" />
        <span asp-validation-for="MeasurementType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success btn-sm" />
    </div>
</form>
<div>
    <a class="btn btn-primary btn-sm" asp-action="Index" role="button">Back to List</a>
</div>