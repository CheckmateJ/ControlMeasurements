@model IEnumerable<ControlMeasurements.Models.Measurement>

@{
    ViewData["Title"] = "Index";
}



<p>
    <br />
    <a class="btn btn-outline-success btn-sm" asp-action="Create" role="button">Create New</a>
</p>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlaceType)
                @Html.DisplayNameFor(model => model.MeasurementType)
                @Html.DisplayNameFor(model => model.Value)
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PlaceType)
                    @Html.DisplayFor(modelItem => item.MeasurementType)
                    @Html.DisplayFor(modelItem => item.Value)
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id" role="button">Edit</a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Edit" asp-route-id="@item.Id" role="button">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>